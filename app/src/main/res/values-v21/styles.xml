<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="android:Theme.Material.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="AppThemeMain" parent="android:Theme.DeviceDefault">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar2</item>
    </style>

    <style name="MyNoActionBarShadowTheme" parent="AppThemeMain">
        <!--<item name="windowContentOverlay">@null</item>-->
        <!--<item name="android:background">@color/black1</item>-->
        <!--<item name="android:windowBackground">@color/black1</item>-->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="SingleActivityTheme" parent="AppThemeMain">
        <!--<item name="windowContentOverlay">@null</item>-->
        <item name="android:windowBackground">@color/gray1</item>
        <item name="android:background">@color/gray1</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:background">@color/gray1</item>
        <item name="android:actionOverflowMenuStyle">@null</item>
        <!--<item name="android:actionOverflowButtonStyle"-->
        <item name="android:homeAsUpIndicator">@drawable/abc_ic_ab_back_mtrl_am_alpha</item>
        <item name="android:titleTextStyle">@style/MyActionBar.TitleTextStyle</item>
    </style>

    <style name="MyActionBar2" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:background">@color/black1</item>
        <item name="android:titleTextStyle">@style/MyActionBar.TitleTextStyle</item>
    </style>

    <style name="TestAllActivityTheme" parent="AppThemeMain">
        <item name="android:actionBarStyle">@style/TestAllActionBar</item>
    </style>

    <style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@null</item>
    </style>

    <style name="TestAllActionBar" parent="@android:style/Theme.Holo.Light" type="text/css">
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
    </style>

    <style name="MyActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">25.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="title_bg" parent="android:Theme">
        <item name="android:windowTitleBackgroundStyle">@style/Titleground</item>
    </style>

    <style name="Titleground">
        <item name="android:background">@color/gray</item>
    </style>
</resources>
